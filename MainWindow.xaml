<Window x:Class="WpfApp_Concesionario.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Concesionario.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>

        <Menu HorizontalAlignment="Left" VerticalAlignment="Top" IsEnabled="{Binding IsAuthenticated}">
            <MenuItem Header="Listar vehiculos" Click="Menu_Click_OpenListarVehiculos" />
            <MenuItem Header="Crear vehiculo" Click="Menu_Click_OpenCrearVehiculo" />
            <MenuItem Header="Modificar vehiculo" Click="Menu_Click_OpenModificarVehiculo" />
            <MenuItem Header="Eliminar vehiculo" Click="Menu_Click_OpenEliminarVehiculo" />
        </Menu>
        <ContentControl x:Name="MainContent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,20,0,0" />
    </Grid>
</Window>
